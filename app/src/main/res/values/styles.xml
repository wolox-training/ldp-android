<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bg_login_sign_up" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="home_tabs_appearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/home_tabs_appearance.text_appearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="home_tabs_appearance.text_appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
