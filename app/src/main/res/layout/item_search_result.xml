<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/static_spacing_medium_extra"
        android:paddingBottom="@dimen/static_spacing_medium_extra">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mVideoImage"
            android:layout_width="@dimen/img_medium"
            android:layout_height="@dimen/img_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="500"
            fresco:failureImage="@drawable/ic_news_broken_image"
            fresco:failureImageScaleType="center"
            fresco:placeholderImage="@drawable/ic_news_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarAutoRotateInterval="1000" />

        <TextView
            android:id="@+id/mVideoTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/static_spacing_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mVideoImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec diam ligula, vulputate eu lectus nec, rutrum vulputate neque. Nulla facilisi. Nullam id finibus lorem, at ornare neque." />

        <TextView
            android:id="@+id/mVideoDescriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/static_spacing_tiny"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/font_medium_extra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/mVideoTitleText"
            app:layout_constraintTop_toBottomOf="@id/mVideoTitleText"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec diam ligula, vulputate eu lectus nec, rutrum vulputate neque. Nulla facilisi. Nullam id finibus lorem, at ornare neque." />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>