<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRefreshNewSwipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/static_spacing_huge_extra">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mNewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="500"
                fresco:failureImage="@drawable/ic_news_broken_image"
                fresco:failureImageScaleType="center"
                fresco:placeholderImage="@drawable/ic_news_placeholder"
                fresco:placeholderImageScaleType="center"
                fresco:viewAspectRatio="1.33" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mBackImage"
                    android:layout_width="@dimen/dimen_large_extra"
                    android:layout_height="@dimen/dimen_large_extra"
                    android:layout_marginStart="@dimen/static_spacing_medium_extra"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="@dimen/static_spacing_small"
                    android:src="@drawable/ic_back_white"
                    tools:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/static_spacing_medium_extra"
                    android:text="@string/news_detail_post"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold"
                    tools:textColor="@android:color/black" />

            </LinearLayout>

            <android.support.constraint.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                fresco:layout_constraintGuide_begin="@dimen/static_spacing_medium_extra" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/static_spacing_medium_extra" />

            <TextView
                android:id="@+id/mTimeAgoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/static_spacing_large"
                android:gravity="center"
                android:minWidth="@dimen/img_small"
                android:textSize="@dimen/font_medium_more"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/mNewImage"
                tools:text="15m" />

            <TextView
                android:id="@+id/mNewTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/static_spacing_large"
                android:layout_marginEnd="@dimen/static_spacing_medium"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large_extra"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/mTimeAgoText"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/mNewImage"
                tools:text="Ali Connors" />

            <TextView
                android:id="@+id/mNewText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/static_spacing_medium_extra"
                android:text="@string/design_placeholder_medium"
                android:textSize="@dimen/font_medium_extra"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/mNewTitleText" />

            <ImageButton
                android:id="@+id/mLikeButton"
                android:layout_width="@dimen/img_medium"
                android:layout_height="@dimen/img_medium"
                android:layout_below="@id/mTimeAgoText"
                android:layout_marginTop="@dimen/static_spacing_huge_extra"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_like_off"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/mNewText" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>