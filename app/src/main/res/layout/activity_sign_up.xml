<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="ar.com.wolox.android.example.ui.signup.SignUpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_sign_up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:elevation="@dimen/static_elevation_small"
        android:paddingStart="@dimen/static_spacing_medium_extra"
        android:paddingEnd="0dp"
        app:navigationIcon="@drawable/img_wolox_logo"
        app:title="@string/sign_up" />

    <FrameLayout
        android:id="@+id/activity_sign_up_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
